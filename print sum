#include <iostream>
using namespace std;

int main() {

    int num, sum = 0;

    cout << "Enter a number: ";
    cin >> num;

    for(int i = 1; i <= num; i++){
        sum += i;
    }

    cout << "Sum of numbers from 1 to " << num << " is " << sum;

    return 0;
}

//Output
Enter a number: 6
Sum of numbers from 1 to 6 is 21

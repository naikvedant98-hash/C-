#include <iostream>
using namespace std;

int main() {
    
    int num1,num2,choice;

    cout<<"Enter the value : ";
    cin>>num1;
    
    cout<<"Enter the value : ";
    cin>>num2;
    
    cout<<"Enter the choice : ";
    cin>>choice;
    
    if (choice == 1){
    cout<<num1<<" + "<<num2<<" = "<<num1+num2;
    cout<<"\n";
    }else if(choice == 2){
    cout<<num1<<" - "<<num2<<" = "<<num1-num2;
    cout<<"\n";
    }else if(choice == 3){
    cout<<num1<<" * "<<num2<<" = "<<num1*num2;
    cout<<"\n";
    }else if(choice == 4){
    cout<<num1<<" / "<<num2<<" = "<<num1/num2;
    cout<<"\n";
    }else{
    cout<<num1<<" % "<<num2<<" = "<<num1%num2;
    }
    return 0;
}

//Output
Enter the value : 45
Enter the value : 
5
Enter the choice : 2
45 - 5 = 40
